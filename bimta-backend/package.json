{
  "name": "bimta-backend",
  "version": "1.0.0",
  "description": "Backend API untuk Sistem Pengelolaan Bimbingan Tugas Akhir",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:report": "playwright show-report",
    "test:e2e:auth": "playwright test tests/e2e/auth.spec.js",
    "test:e2e:dashboard": "playwright test tests/e2e/dashboard.spec.js",
    "test:e2e:mahasiswa": "playwright test tests/e2e/akun-mahasiswa.spec.js",
    "test:e2e:dosen": "playwright test tests/e2e/akun-dosen.spec.js",
    "test:e2e:referensi": "playwright test tests/e2e/referensi-ta.spec.js",
    "test:e2e:laporan": "playwright test tests/e2e/generate-laporan.spec.js",
    "test:browsers": "playwright test --config=playwright.compat.config.js",
    "test:browsers:headed": "playwright test --config=playwright.compat.config.js --headed",
    "test:chrome": "playwright test --config=playwright.compat.config.js --project=chrome",
    "test:safari": "playwright test --config=playwright.compat.config.js --project=safari",
    "test:edge": "playwright test --config=playwright.compat.config.js --project=edge",
    "test:firefox": "playwright test --config=playwright.compat.config.js --project=firefox",
    "test:brave": "playwright test --config=playwright.compat.config.js --project=brave",
    "test:opera": "playwright test --config=playwright.compat.config.js --project=opera",
    "test:vivaldi": "playwright test --config=playwright.compat.config.js --project=vivaldi",
    "test:min": "playwright test --config=playwright.compat.config.js --project=min",
    "test:report": "playwright show-report compatibility-report",
    "test:ari": "jest \".*\\.test\\.js$\"",
    "test:all": "npm run test && npm run test:e2e",
    "test:ari:cov": "jest --coverage \".*\\.test\\.js$\""
  },
  "keywords": [
    "bimbingan",
    "tugas-akhir",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
